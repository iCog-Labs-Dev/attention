#include <cxxtest/TestSuite.h>
#include <opencog/atomspace/AtomSpace.h>
#include <opencog/attentionbank/bank/AttentionBank.h>

using namespace opencog;

class AttentionBankTest : public CxxTest::TestSuite
{
private:
    AtomSpace* atomSpace;
    AttentionBank* attentionBank;

public:
    void setUp() override {
        atomSpace = new AtomSpace();
        attentionBank = &attentionbank(atomSpace); 
    }

    void tearDown() override {
        attentionbank(nullptr);
        delete atomSpace;
    }

    void testCalculateSTIWage() {
        // Default parameters should result in calculateSTIWage returning 20.0
        AttentionValue::sti_t stiWage = attentionBank->calculateSTIWage();
        TS_ASSERT_EQUALS(stiWage, 20.0); // Assert that the result is 20.0
    }

    void testCalculateLTIWage() {
        // Default parameters should result in calculateLTIWage returning 20.0
        AttentionValue::lti_t ltiWage = attentionBank->calculateLTIWage();
        TS_ASSERT_EQUALS(ltiWage, 20.0); // Assert that the result is 20.0
    }
};
